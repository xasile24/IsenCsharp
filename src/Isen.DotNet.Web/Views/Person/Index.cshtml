@{
    ViewData["Title"] = "Toutes les Personnes";
}
@using Isen.DotNet.Library.Models
@model IEnumerable<Person>

<h1>Toutes les personnes</h1>

<table class="table table-striped">
  <thead>
      <tr>
          <th scope="col">Id</th>
          <th scope="col">Nom</th>
          <th scope="col">Prénom</th>
          <th scope="col">Ville</th>
          <th scope="col">Date de naissance</th>
          <th scope="col">Age</th>
          <th>Action...</th>
      </tr>
  </thead>
  <tbody>
    @foreach(var person in Model)
    { 
        var dateString = person.DateOfBirth.HasValue ?
            person.DateOfBirth.Value.ToShortDateString() :
            "";
      <tr>
          <th scope="row">@person.Id</th>
          <td>@person.LastName</td>
          <td>@person.FirstName</td>
          <td>@person.BornIn?.Name</td>
          <td>@dateString</td>
          <td>@person.Age an(s)</td>
          <td>
              <a class="btn btn-outline-primary"
                 asp-controller="Person"
                 asp-action="Edit"
                 asp-route-id="@person.Id">Modifier</a>
              <a class="btn btn-outline-danger"
                 asp-controller="Person"
                 asp-action="Delete"
                 asp-route-id="@person.Id">Supprimer</a>
          </td>
      </tr>
     }
  </tbody>
</table>