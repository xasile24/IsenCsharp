@{
    ViewData["Title"] = "Edition d'une ville";
}
@using Isen.DotNet.Library.Models
@model City
<h1>Edition d'une ville (formulaire)</h1>

<div class="row">
    <div class="col-12">
        
        <form class="form-group" asp-action="Edit">
            
            <input type="hidden" 
                   asp-for="Id"
                   value="@Model?.Id" />

            <div class="form-group">
                <label for="cityName">Nom de la ville</label>
                <input id="cityName"
                       type="text"
                       class="form-control"
                       placeholder="City name"
                       asp-for="Name"
                       value="@Model?.Name" />
            </div>
            
            <div class="form-group">
                <label for="cityZipCode">Code postal</label>
                <input id="cityZipCode"
                       type="text"
                       class="form-control"
                       placeholder="Zip code"
                       asp-for="ZipCode"
                       value="@Model?.ZipCode" />
            </div>

            <button type="submit" class="btn btn-primary">Valider</button>
            <a class="btn btn-secondary"
               asp-controller="City" asp-action="Index">Annuler</a>

        </form>

    </div>
</div>